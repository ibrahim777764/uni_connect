<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  .header {
    background-color: #0077b6;
    color: white;
    padding: 10px;
  }

  h1 {
    font-size: 36px;
    margin-bottom: 10px;
  }

  p {
    font-size: 18px;
    margin-bottom: 10px;
  }

  .logo {
    max-width: 100%;
    height: auto;
    margin-bottom: 20px;
  }
  
  /* added styles for navbar */
  .navbar {
    position: sticky;
    top: 0;
    background-color: #f1f1f1;
    overflow: hidden;
  }

  .navbar a {
    float: left;
    display: block;
    color: black;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  .navbar a:hover {
    background-color: #ddd;
    color: black;
  }

  .navbar a.active {
    background-color: #0077b6;
    color: white;
  }
  
  /* added styles for features section */
  .features {
    float: left;
    width: 20%;
    height: 100%;
    background-color: #f1f1f1;
    padding: 20px;
  }

  .features a {
    display: block;
    color: black;
    text-decoration: none;
    font-size: 17px;
    margin-bottom: 10px;
  }

  .features a:hover {
    color: #0077b6;
  }

  .content {
    float: left;
    width: 80%;
    height: 100%;
    padding: 20px;
  }
</style>

<div class="header">
  <h1><%= @university.name %> Dashboard</h1>
</div>

<!-- added navbar and features section -->
<div class="navbar">
  <a class="active" href="#">Dashboard</a>
  <a href="#">Programs and Courses</a>
  <a href="#">Admissions</a>
  <a href="#">Student Management</a>
</div>



<div class="content">
  <% if @university.logo.is_a?(ActiveStorage::Attached::One) && @university.logo.attached? %>
    <%= image_tag @university.logo, class: "logo" %>
  <% else %>
    <p>No logo available.</p>
  <% end %>
  <p><strong>Contact Information:</strong> <%= @university.contact_info %></p>
  <p><strong>About:</strong> <%= @university.about %></p>
</div>
