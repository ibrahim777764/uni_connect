<style>
  form {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
  }

  input[type="text"], textarea {
    padding: 10px;
    font-size: 16px;
    border-radius: 5px;
    border: none;
    background-color: #f0f0f0;
    margin-bottom: 20px;
  }

  textarea {
    resize: vertical;
    height: 150px;
  }

  input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    border: none;
    font-size: 16px;
    cursor: pointer;
  }

  input[type="submit"]:hover {
    background-color: #0062cc;
  }
</style>

<h1>University Registration Form</h1>

<%= form_for @university do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :logo %>
  <%= f.file_field :logo %>

  <%= f.label :contact_info %>
  <%= f.text_field :contact_info %>

  <%= f.label :about %>
  <%= f.text_area :about %>

  <%= f.submit %>
<% end %>
